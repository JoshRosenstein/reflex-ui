{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "checkJs": true,
    "jsx": "react",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "removeComments": true,
    "skipLibCheck": true
  },
  "exclude": [
    "**/node_modules/*",
    "**/build/*",
    "**/scripts/*",
    "**/acceptance-tests/*",
    "**/webpack/*",
    "**/jest/*",
    "**/setupTests.ts"
  ]
}
