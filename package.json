{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.9.4"
  },
  "workspaces": [
    "packages/*",
    "showcase/*"
  ],
  "scripts": {
    "postinstall": "node ./scripts/react-native-web-tsd.js",
    "tsc-core": "tsc -w -p packages/core/tsconfig.json",
    "tsc-md": "tsc -w -p packages/material-design/tsconfig.json"
  },
  "devDependencies": {
    "@types/history": "^4.7.2",
    "@types/jest": "^23.3.13",
    "@types/react": "16.4.14",
    "@types/react-native": "0.56.18",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-test-renderer": "^16.0.3",
    "babel-jest": "^23.6.0",
    "jest": "^23.6.0",
    "metro-react-native-babel-preset": "0.51.1",
    "prettier": "^1.16.1",
    "prettier-tslint": "^0.4.2",
    "react-art": "^16.7.0",
    "react-scripts": "2.1.3",
    "react-test-renderer": "^16.7.0",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  }
}
