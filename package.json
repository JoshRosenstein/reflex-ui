{
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "^8.0.0",
    "yarn": "^1.9.4"
  },
  "workspaces": [
    "packages/*",
    "showcase/*"
  ],
  "scripts": {
    "postinstall": "node ./scripts/react-native-web-tsd.js",
    "start-core": "tsc -w -p packages/core/tsconfig.json",
    "start-md": "tsc -w -p packages/material-design/tsconfig.json"
  },
  "devDependencies": {
    "@types/history": "^4.7.0",
    "@types/jest": "^23.3.1",
    "@types/react": "^16.4.11",
    "@types/react-native": "^0.56.9",
    "@types/react-router-dom": "^4.3.0",
    "@types/react-test-renderer": "^16.0.2",
    "babel-jest": "^23.4.2",
    "babel-preset-react-native": "^4.0.0",
    "jest": "^23.5.0",
    "prettier": "^1.14.2",
    "prettier-tslint": "^0.4.0",
    "react-app-rewired": "^1.5.2",
    "react-art": "^16.4.2",
    "react-native-typescript-transformer": "^1.2.10",
    "react-scripts-ts": "^2.17.0",
    "react-test-renderer": "^16.4.2",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.9.2",
    "tslint-config-prettier": "^1.14.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.0.1"
  },
  "babel": {
    "presets": [
      "react-native"
    ]
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.jsx?$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "globals": {
      "ts-jest": {
        "useBabelrc": true
      }
    }
  }
}
