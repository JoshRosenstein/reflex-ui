{
  "name": "cross-platform-typescript",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "web": "react-scripts start",
    "build": "react-app-rewired build --scripts-version react-scripts-ts",
    "ios": "react-native run-ios --no-packager --simulator=\"iPhone X\"",
    "android": "cd ./android && ./gradlew app:assembleDebug && ./gradlew installDebug",
    "android-release": "cd ./android && ./gradlew app:assembleRelease",
    "android-packager": "cd ../../ && node node_modules/react-native/local-cli/cli.js start --reset-cache --port 8082 --config ../../../../showcase/cross-platform-ts/rn-cli.config.js",
    "ios-packager": "cd ../../ && node node_modules/react-native/local-cli/cli.js start --reset-cache --port 8081 --config ../../../../showcase/cross-platform-ts/rn-cli.config.js",
    "test": "react-app-rewired test --scripts-version react-scripts-ts --env=jsdom",
    "eject": "react-scripts-ts eject",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "rebuild": "rm -rf ios; rm -rf android; react-native upgrade; rm -f .babelrc; rm -f .buckconfig; rm -f .flowconfig; rm -f .watchmanconfig; rm -f .gitattributes;"
  },
  "dependencies": {
    "react": "16.7.0",
    "react-dom": "16.7.0",
    "react-native": "0.58.3",
    "react-native-navigation": "2.8.0",
    "react-native-svg": "9.2.3",
    "react-native-vector-icons": "6.2.0",
    "react-native-web": "0.10.0",
    "react-router-dom": "4.3.1",
    "react-spring": "5.6.14",
    "@reflex-ui/core": "0.1.0",
    "@reflex-ui/material-design": "0.1.0",
    "swgs": "3.3.0"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
